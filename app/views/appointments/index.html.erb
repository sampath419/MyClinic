<h1>Appointments#index</h1>
<table>
  <thead>
    <tr>
      <th>Customer Name</th>
      <th>Doctor Name</th>
      <th>Pet</th>
      <th>Appointment Date Time</th>
    </tr>
  </thead>
  <% @appointments.each do |appointment| %>
    <tr>
      <td>
        <%= appointment.customer.name %>
      </td>
      <td>
        <%= appointment.doctor.name %>
      </td>
      <td>
        <%= appointment.pet %>
      </td>
      <td>
        <%= appointment.visit_date.strftime('%b %d @ %H:%M %p') %>
      </td>

    </tr>
  <% end %>
</table>
<br/>
